<%= turbo_frame_tag "notifications" do %>
  <% if flash[:alert] %>
    <div data-controller="notification" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <span><%= flash[:alert] %></span>
    </div>
  <% elsif flash[:notice] %>
    <div data-controller="notification" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative">
      <span><%= flash[:notice] %></span>
    </div>
  <% end %>
<% end %>
